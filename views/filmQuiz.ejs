<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Film Quiz</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body id = "bodySearch">
    <header>
        <h1 class= "headerTitle">TheMovieWiki</h1>
        <nav class="navbar navbar-expand-lg navbar-dark">
          <div class="container d-flex flex-column align-items-center">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
             
              <li class="nav-item">
                <a class="nav-link" href="/trending">Trending</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/searchMovie">Search</a>
              </li>
           
            <li class="nav-item">
                <a class="nav-link" href="#">Write Your Reviews</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/filmQuiz">Test Your Knowledge</a>
              </li>
              
            </ul>
          </div>
        </div>
        </nav>
      </header>
      <div class = "customizeQuiz">

  <form action="/filmQuiz" method="POST">

    
    <% for (let i = 0; i < quizData.length; i++) { 
         let q = quizData[i];
         let options = [q.correct_answer, ...q.incorrect_answers];
         options.sort(() => Math.random() - 0.5); 
    %>

     
        <b>Q<%= i + 1 %>: <%= q.question %></b><br>

        <% for (let j = 0; j < options.length; j++) { %>
          <label>
            <input type="radio" name="question<%= i %>" value="<%= options[j] %>">
            <%= options[j] %>
          </label><br>
        <% } %>

        <input type="hidden" name="correct<%= i %>" value="<%= q.correct_answer %>">
        
        <hr>
      

    <% } %>

    <button type="submit">Submit</button>
  </form>
</div>
</body>
</html>