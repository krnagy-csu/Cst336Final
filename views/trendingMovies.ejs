<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trending Movies</title>
    <link rel="stylesheet" href="/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body id = "bodySearch">
  <%-include('partials/navbar.ejs')%>

<div class="customizeDiv">
  <br>
  <h5>Trending:</h5>
<% if (trending.length === 0) { %>
    <p>No movies found.</p>
  <% } else { %>
    <% for (let i = 0; i < Math.min(15,trending.length); i++) { %>
        <% let trendings = trending[i]; %>
      <div class ="movieSlots">
        <h5 class = "movieTitle"><%= trendings.title %></h5>
        <% if (trendings.poster_path) { %>
            <a href="/movie/<%= trendings.id %>">
          <img class = "movie-poster" src="https://image.tmdb.org/t/p/w200<%= trendings.poster_path %>">
        </a>
        <% } else { %>
          <p>No poster available.</p>
        <% } %>
      </div>
      <% } %>
   
  <% } %>

  <br>
</div>
    
</body>
</html>